{
    "manifest_version": 3,
    "name": "AI Highlighter",
    "version": "1.0",
    "description": "Uses GenAI to extract key points and highlight them on webpages and PDFs",
    "permissions": ["scripting", "activeTab", "storage"],
    "background": {
      "service_worker": "background/background.js",
      "type": "module"
    },
    "action": {
      "default_popup": "popup/index.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content/content.js"]
      }
    ],
    "icons": {
      "48": "icon.png",
      "128": "icon.png"
    }
  }
  
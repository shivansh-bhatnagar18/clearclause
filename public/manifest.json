{
  "manifest_version": 3,
  "name": "ClearClause",
  "version": "1.0.0",
  "description": "Highlights important points on webpages using Google GenAI",
  "permissions": ["scripting", "activeTab", "tabs"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["pdf-handler.mjs"],
      "run_at": "document_idle",
      "type": "module"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["libs/pdf.worker.mjs"],
      "matches": ["<all_urls>"]
    }
  ]
}
